<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sqsq.flow.mapper.FlowTaskLogMapper">

    <resultMap type="FlowTaskLog" id="FlowTaskLogResult">
        <result property="id"    column="id"    />
        <result property="taskId"    column="task_id"    />
        <result property="taskNode"    column="task_node"    />
        <result property="opAction"    column="op_action"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectFlowTaskLogVo">
        select id, task_id, task_node, user_id, op_action, create_time, remark from flow_task_log
    </sql>

    <select id="selectFlowTaskLogList" parameterType="FlowTaskLog" resultMap="FlowTaskLogResult">
        <include refid="selectFlowTaskLogVo"/>
        <where>
            <if test="taskId != null  and taskId != ''"> and task_id = #{taskId}</if>
            <if test="taskNode != null  and taskNode != ''"> and task_node = #{taskNode}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="opAction != null  and opAction != ''"> and op_action = #{opAction}</if>
        </where>
    </select>

    <select id="countFlowTaskLog" parameterType="FlowTaskLog" resultType="int">
        select count(id) from flow_task_log
        <where>
            <if test="taskId != null  and taskId != ''"> and task_id = #{taskId}</if>
            <if test="taskNode != null  and taskNode != ''"> and task_node = #{taskNode}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="opAction != null  and opAction != ''"> and op_action = #{opAction}</if>
        </where>
    </select>

    <select id="selectFlowTaskLogById" parameterType="Long" resultMap="FlowTaskLogResult">
        <include refid="selectFlowTaskLogVo"/>
        where id = #{id}
    </select>

    <insert id="insertFlowTaskLog" parameterType="FlowTaskLog" useGeneratedKeys="true" keyProperty="id">
        insert into flow_task_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id,</if>
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="taskNode != null and taskNode != ''">task_node,</if>
            <if test="opAction != null and opAction != ''">op_action,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">#{taskId},</if>
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="taskNode != null and taskNode != ''">#{taskNode},</if>
            <if test="opAction != null and opAction != ''">#{opAction},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateFlowTaskLog" parameterType="FlowTaskLog">
        update flow_task_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="taskId != null and taskId != ''">task_id = #{taskId},</if>
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="taskNode != null and taskNode != ''">task_node = #{taskNode},</if>
            <if test="opAction != null and opAction != ''">op_action = #{opAction},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFlowTaskLogById" parameterType="Long">
        delete from flow_task_log where id = #{id}
    </delete>

    <delete id="deleteFlowTaskLogByIds" parameterType="String">
        delete from flow_task_log where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>